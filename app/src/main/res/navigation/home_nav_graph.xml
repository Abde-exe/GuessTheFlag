<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/infosFragment"
        android:name="com.example.guesstheflag.InfosFragment"
        android:label="Play"
        tools:layout="@layout/fragment_infos" >
        <action
            android:id="@+id/action_infosFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.example.guesstheflag.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_infosFragment"
            app:destination="@id/infosFragment" />
    </fragment>
    <fragment
        android:id="@+id/about"
        android:name="com.example.guesstheflag.AboutFragment"
        android:label="About Us"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/list"
        android:name="com.example.guesstheflag.LeaderBoardFragment"
        android:label="Leader Board"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.guesstheflag.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" />
</navigation>